# -*- dockerfile -*-

# A minimal build system for Numerics with gcc & atlas & mumps
# Note : the ssh client prevents mpi failure.
 
FROM @DOCKER_DISTRIB@

RUN apt-get -y update && apt-get -y install \
    cmake \
    make \
    gcc \
    gfortran \
    doxygen \
    libblas-dev \
    liblapack-dev \
    libatlas-base-dev \
    libatlas-dev
    libopenmpi-dev \
    openssh-client \
    libscalapack-mpi-dev \
    libmetis-dev \
    libmumps-dev
