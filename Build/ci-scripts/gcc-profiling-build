#!/bin/bash

WORK_DIR=$1

rm -rf $WORK_DIR/install-dir
rm -rf $WORK_DIR/build-dir
mkdir -p $WORK_DIR/build-dir

cd $WORK_DIR/build-dir

cmake $WORK_DIR/Build -DON_DASHBOARD=1 -DMODE=Continuous -DDEV_MODE=ON -DWITH_IO=0 -DWITH_MECHANICS=1 -DWITH_EXAMPLES=1 -DWITH_CONTROL=1 -DCMAKE_INSTALL_PREFIX=$WORK_DIR/install-dir -DSOURCE_DIR=$WORK_DIR -DINSTALL_COMMAND="make;-ik;install" -DFROM_REPO=0 -DCTEST_OPTIONS='-j2;-V' -DBUILD_TYPE=Profiling -Dproject_CMAKE_ARGS="-DWITH_MUMPS=1;-DGAMS_DIR=/builds/gams24.4_linux_x64_64_sfx"
