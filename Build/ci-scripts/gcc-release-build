#!/bin/bash

WORK_DIR=$1

# for compatibility reason (i.e => check jobs in Jenkins)
BUILDNAME_OPTIONS=${2:-"openblas-openmp"}

rm -rf $WORK_DIR/install-dir
rm -rf $WORK_DIR/build-dir
mkdir -p $WORK_DIR/build-dir

cd $WORK_DIR/build-dir

cmake $WORK_DIR/Build -DON_DASHBOARD=1 -DMODE=Continuous -DWITH_IO=0 -DDEV_MODE=ON -DWITH_MECHANICS=1 -DWITH_EXAMPLES=1 -DWITH_CONTROL=1 -DCMAKE_INSTALL_PREFIX=$WORK_DIR/install-dir -DSOURCE_DIR=$WORK_DIR -DINSTALL_COMMAND="make;-ik;install" -DFROM_REPO=0 -DCTEST_OPTIONS='-j2;-V' -DBUILD_TYPE=Release -DBUILDNAME_OPTIONS=${BUILDNAME_OPTIONS}
