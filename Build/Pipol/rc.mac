#!/bin/sh
set -x
env

/opt/local/bin/port install rsync
/opt/local/bin/port install cppunit
/opt/local/bin/port install wget

#
# install in /usr
#
/opt/local/bin/wget http://r.research.att.com/gfortran-42-5664.pkg
/usr/sbin/installer -pkg gfortran-42-5664.pkg -target /

#
# hpc fortran is in /usr/local
#
rm -rf /usr/local/bin/gfortran 
rm -rf /usr/local/lib/libgfortran.*
